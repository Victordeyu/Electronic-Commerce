page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  display: flex;
  height: calc(100vh - 90rpx);
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_menu {
  flex: 5;
}
.cates .cates_container .right_menu .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_menu .goods_list navigator {
  width: 50%;
  text-align: center;
}
.cates .cates_container .right_menu .goods_list navigator image {
  width: 70%;
}
.cates .cates_container .right_menu .goods_list navigator .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
